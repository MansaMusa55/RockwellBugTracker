@model IEnumerable<RockwellBugTracker.Models.ViewModel.ProjectMembersViewModel>

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h1>Assign User to Project</h1>

            </div>
        </div>
    </div>
</div> 
<div class="container">
    <div class="card p-4">
        <h2> Assign Users </h2>
       @foreach (var project in Model)
       {
        <div class="row">
            <div class="col">
                <div class="panel panel-green margin-bottom-40">
                    <div class="panel-heading">
                        <h3 class="panel-title"> @project.Project.Name</h3>
                    </div>
                </div>
                <p>
                    Name :
                    <span>@project.Project.Name</span>
                </p>

                <form asp-action="AssignUsers" asp-controller="Projects" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@project.Project.Id">
                    <input type="hidden" asp-for="@project.Project.Name">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="@project.Users" class="control-label">Assign team members for Project: @project.Project.Name</label>
                            <select asp-for="@project.SelectedUsers" class="form-control" asp-items="@project.Users" multiple="multiple"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <input type="submit" class="btn btn-success" value="Assign Users" />
                        </div>
                    </div>
                </form>


            </div>
            <!--End Hover Rows-->
        </div>
       }
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
